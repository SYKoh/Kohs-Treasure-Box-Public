{
    "title": "222Change caps_lock to language-switch and Control",
    "rules": [
        {
            "description": "222Post capslock+spacebar if Caps is tapped, Control if held.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": false
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar",
                            "modifiers":[
                                "left_control"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}